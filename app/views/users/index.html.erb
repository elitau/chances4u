<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Password</th>
    <th>Study path</th>
    <th>Study place</th>
    <th>Study path since</th>
    <th>Avatar file name</th>
    <th>Avatar content type</th>
    <th>Avatar file size</th>
    <th>Avatar updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= user.study_path %></td>
    <td><%= user.study_place %></td>
    <td><%= user.study_path_since %></td>
    <td><%= user.avatar_file_name %></td>
    <td><%= user.avatar_content_type %></td>
    <td><%= user.avatar_file_size %></td>
    <td><%= user.avatar_updated_at %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

